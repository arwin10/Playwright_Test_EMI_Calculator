{
  "name": "test-emi-calculator-playwright",
  "version": "1.0.0",
  "description": "Playwright E2E Automation Framework for EMI Calculator",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:sanity": "playwright test tests/sanity --project=chromium",
    "test:smoke": "playwright test tests/smoke --project=chromium",
    "test:regression": "playwright test tests/regression",
    "test:negative": "playwright test tests/negative",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results"
  },
  "keywords": [
    "playwright",
    "e2e",
    "automation",
    "testing",
    "typescript"
  ],
  "author": "Test Architect",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "allure-commandline": "^2.25.0",
    "allure-playwright": "^2.15.0",
    "dotenv": "^16.3.1",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0",
    "typescript": "^5.3.0"
  }
}
